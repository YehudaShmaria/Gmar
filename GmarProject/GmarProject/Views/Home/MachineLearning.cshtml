    function PrintChart(Obj) {
        console.log(Obj)
        var Dates = [];
        var Weight = [];
        for (var i = 0; i < Obj.length; i++) {
            for (var z = 0; z < Obj[i].length; z++) {
                if (typeof Obj[i][z].Date !== 'undefined' && z == 0){
                    Dates.push(Obj[i][z].Date);
                }
