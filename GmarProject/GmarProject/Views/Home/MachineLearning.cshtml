                    Weight.push(Obj[i][z].CurrentWeight);
                }
            }
        }
        console.log(Dates);
        console.log(Weight);
        var ctxB = document.getElementById("myChart").getContext('2d');
        var myBarChart = new Chart(ctxB, {
            type: 'bar',
            data: {
                labels: Dates,
                datasets: [{
                    label: '# נתוני משקל ביחס לשבועות',
                    data: Weight,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
