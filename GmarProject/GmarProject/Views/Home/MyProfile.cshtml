
@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
</style>

<div class="text-center">

    <div class="justify-content-center">
        <div style="background-color:azure; height:100px">
            <h1 style="font-style:italic;font-size:50px" class="text-primary"><u>My Profile</u></h1>
        </div>
    </div>

    <br />
    
    <h1>ברוכים הבאים לדף הפרופיל שלך!!!</h1>

    <div class="container text-center">
        <br />

        <div style="padding:20px">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                עדכן או הכנס נתונים
            </button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">עדכן פרופיל</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group text-right">
                                <label for="UpdateWeightNow">עדכן משקל עכשווי:</label>
                                <input id="UpdateWeightNow" type="number" class="form-control form-control-underlined border-danger">
                            </div>

                            <div class="form-group text-right">
                                <label for="UpdatePurpose">עדכן מטרה:</label>
                                <input id="UpdatePurpose" type="number" class="form-control form-control-underlined border-danger">
                            </div>

                            <div class="form-group text-right">
                                <label for="UpdateWeight">משקל התחלה עדכן:</label>
                                <input id="UpdateWeight" type="number" class="form-control form-control-underlined border-danger">
                            </div>

                            <div class="form-group text-right">
                                <label>מגדר:</label>
                                <select id="mode" class="MyGender form-control">
                                    <option id="GenderUpdate"></option>
                                    <option>men</option>
                                    <option>female</option>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">סגור חלון</button>
                        <button onclick="UpdateProfile()" type="submit" class="btn btn-primary">שמור שינויים</button>
                    </div>
                </div>
            </div>
        </div>


        <div id="Profile" style="display:none" class="main-body">
            <div class="mt-3">
                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img id="ImgProfile" onload="GetData()" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                    <div class="mt-3">
                                        <h4 class="Name"></h4>
                                        <p class="text-secondary mb-1">הבן אדם שהולך לשנות את עצמו!!!</p>
                                        <p class="text-muted font-size-sm">פה נכתוב בהמשך משהו מעניין</p>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                            עדכן או הכנס נתונים
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">

                                <div class="row">
                                    <div class="Name col-sm-9 text-secondary">

                                    </div>
                                    <div class="col-sm-3">
                                        <h5 class="mb-0">שם מלא:</h5>
                                    </div>
                                </div>

                                <hr />

                                <div class="row">
                                    <div id="Gender" class="col-sm-9 text-secondary">

                                    </div>
                                    <div class="col-sm-3">
                                        <h5 class="mb-0">מגדר:</h5>
                                    </div>
                                </div>

                                <hr />

                                <div class="row">
                                    <div id="Weight" class="col-sm-9 text-secondary">

                                    </div>
                                    <div class="col-sm-3">
                                        <h5 class="mb-0">משקל התחלה:</h5>
                                    </div>
                                </div>

                                <hr />

                                <div class="row">
                                    <div id="WeightNow" class="col-sm-9 text-secondary">

                                    </div>
                                    <div class="col-sm-3">
                                        <h5 class="mb-0">משקל עכשווי:</h5>
                                    </div>
                                </div>

                                <hr>
                                <div class="row">
                                    <div id="Purpose" class="col-sm-9 text-secondary">

                                    </div>
                                    <div class="col-sm-3">
                                        <h5 class="mb-0">מטרה:</h5>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div id="Weeks" class="col-sm-9 text-secondary">

                                    </div>
                                    <div class="col-sm-3">
                                        <h5 class="mb-0">מספר השבועות במעקב:</h5>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div id="Days" class="col-sm-9 text-secondary">

                                    </div>
                                    <div class="col-sm-3">
                                        <h5 class="mb-0">מספר הימים במעקב:</h5>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

  
    function Test1(Obj) {
        if (Obj.Gender == 'female') {
            $('#ImgProfile').attr('src', 'https://bootdey.com/img/Content/avatar/avatar3.png')
        }
        $('.Name').text(Obj.Name);
        $('#Gender').text(Obj.Gender);
        $('#GenderUpdate').text(Obj.Gender);
        $('#Weight').text(Obj.Weight);
        $('#UpdateWeight').val(Obj.Weight);
        $('#Weeks').text(Obj.Weeks.length);
        $('#Purpose').text(Obj.Purpose);
        $('#UpdatePurpose').val(Obj.Purpose);
        $('#UpdateWeightNow').val(Obj.WeightNow);
        $('#WeightNow').text(Obj.WeightNow);
        
        var c = counterTheDays(Obj.Weeks);
        $('#Days').text(c);
        $('#Profile').fadeIn(4000);
    }

    function counterTheDays(Weeks) {
        var c = 0;
        for (var i = 0; i < Weeks.length; i++) {
            c += Weeks[i].length;
        }
        return c;
    }

    function UpdateProfile() {

      
        $(".select.MyGender").change(function () {
              var selectedCountry = $(this).children("option:selected").val();
             alert("You have selected the country - " + selectedCountry);
        });
        
        var Update = {
            Name: "@HttpContext.Current.User.Identity.Name",
            GenderUpdate: $("#mode :selected").text(),
            UpdatePurpose: $('#UpdatePurpose').val(),
            UpdateWeightNow: $('#UpdateWeightNow').val(),
            UpdateWeight: $('#UpdateWeight').val()
        };
        const json = JSON.stringify(Update);
        const xml = new XMLHttpRequest();
        xml.open('POST', 'http://localhost:3000/getdata/UpdateProfile');
        xml.setRequestHeader("Content-type", "application/json");
        xml.send(json);
        location.reload();
       
    }

</script>